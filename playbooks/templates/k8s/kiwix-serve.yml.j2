---
{#
  Manifest that deploys kiwix-serve onto Kubernetes.
#}
apiVersion: v1
kind: PersistentVolume
metadata:
  name: {{ namespace_ }}-zims-ro
spec:
  capacity:
    storage: {{ nfs_export_size }}
  accessModes:
    - ReadOnlyMany
  nfs:
    server: {{ nfs_export.host }}
    path: {{ nfs_export.device }}

---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: zims-ro
  namespace: {{ namespace_ }}
spec:
  volumeName: {{ namespace_ }}-zims-ro
  accessModes:
    - ReadOnlyMany
  resources:
    requests:
      storage: {{ nfs_export_size }}

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: kiwix-serve
  namespace: {{ namespace_ }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: kiwix-serve
  template:
    metadata:
      labels:
        app.kubernetes.io/name: kiwix-serve
    spec:
      containers:
        - name: kiwix-serve
          image: ghcr.io/kiwix/kiwix-serve@{{ kiwix_serve_image_digest }}
          args:
            - /mnt/*.zim
          env:
            - name: PORT
              value: "80"
          readinessProbe:
            httpGet:
              path: /
              port: 80
          livenessProbe:
            httpGet:
              path: /
              port: 80
          securityContext:
            allowPrivilegeEscalation: false
            runAsNonRoot: true
            runAsUser: 1001
            seccompProfile:
              type: RuntimeDefault
            capabilities:
              drop:
                - ALL
          resources:
            requests:
              cpu: 5m
              memory: 10Mi
          volumeMounts:
            - name: zims
              mountPath: /mnt
      volumes:
      - name: zims
        persistentVolumeClaim:
          claimName: zims-ro

---
apiVersion: v1
kind: Service
metadata:
  name: kiwix-serve
  namespace: {{ namespace_ }}
spec:
  selector:
    app.kubernetes.io/name: kiwix-serve
  ports:
    - name: http
      port: 80
      targetPort: 80

---
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: kiwix-serve
  namespace: {{ namespace_ }}
spec:
  parentRefs:
    - name: {{ gateway_name }}
      namespace: {{ gateway_namespace }}
  hostnames:
    - kiwix.{{ homelab_network_domain }}
  rules:
  - matches:
    - path:
        type: PathPrefix
        value: /
    backendRefs:
      - name: kiwix-serve
        port: 80
