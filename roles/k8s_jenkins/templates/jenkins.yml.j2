---
{#  
  Manifest that deploys jenkins onto Kubernetes.
#}
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ jenkins_instance_name }}
  namespace: {{ jenkins_instance_name }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{ jenkins_instance_name }}
  template:
    metadata:
      labels:
        app: {{ jenkins_instance_name }}
    spec:
      containers:
      - name: {{ jenkins_instance_name }}
        image: {{ jenkins_instance_image }}
        ports:
        - containerPort: {{ jenkins_http_port }}
        volumeMounts:
        - name: jenkins-home
          mountPath: /var/jenkins_home
      volumes:
      - name: jenkins-home
        emptyDir: { }

---
apiVersion: v1
kind: Service
metadata:
  name: jenkins
  namespace: {{ jenkins_instance_name }}
spec:
  type: NodePort
  ports:
  - name: http-port
    port: {{ jenkins_http_port }}
    targetPort: {{ jenkins_http_port }}
  selector:
    app: {{ jenkins_instance_name }}
